@{
	ViewData["Title"] = "Add a new pizza";
}

@model Pizza

<div class="container">
	<h1 class="mb-3">Aggiungi una nuova pizza</h1>
	<form asp-controller="Pizze" asp-action="Create" method="post">
		@Html.AntiForgeryToken()
		<div class="mb-3">
			<label for="pizza-name" class="form-label">Name</label>
			<input type="text" asp-for="Name" class="form-control" id="pizza-name">
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label for="pizza-description" class="form-label">Descrizione</label>
			<textarea id="pizza-description" class="form-control" asp-for="Description"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label for="img-path" class="form-label">Image Path</label>
			<input type="url" class="form-control" id="img-path" asp-for="ImgPath">
			<span asp-validation-for="ImgPath" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label for="price" class="form-label">Prezzo</label>
			<input type="text" class="form-control" id="price" asp-for="Price">
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>
